<form class="w-full px-2">
  <div class="my-2 text-lg font-semibold text-center">
    <span>{{format-date @event.day}}</span>
  </div>
  <div class="flex items-center mb-2">
    <label class="block text-gray-800 mb-1 pr-2" for="inline-weight">
      <span>{{svg-jar "weight-scale-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full appearance-none py-2 px-4 border border-gray-500
                  text-gray-700 leading-tight focus:outline-none focus:border-yellow-500"
            id="inline-weight"
            type="number"
            step=0.1
            placeholder=0.0
            value={{@measure.weight}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block text-gray-800 mb-1 pr-2" for="inline-fat">
      <span>{{svg-jar "fat-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full appearance-none py-2 px-4 border border-gray-500
                  text-gray-700 leading-tight focus:outline-none focus:border-yellow-500"
            id="inline-fat"
            type="number"
            step=0.1
            placeholder=0.0
            value={{@measure.fat}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block text-gray-800 mb-1 pr-2" for="inline-water">
      <span>{{svg-jar "water-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full appearance-none py-2 px-4 border border-gray-500
                  text-gray-700 leading-tight focus:outline-none
                  focus:border-yellow-500"
            id="inline-water"
            type="number"
            step=0.1
            placeholder=0.0
            value={{@measure.water}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block text-gray-800 mb-1 pr-2" for="inline-muscle">
      <span>{{svg-jar "muscle-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full appearance-none py-2 px-4 border border-gray-500
                  text-gray-700 leading-tight focus:outline-none
                  focus:border-yellow-500"
            id="inline-muscle"
            type="number"
            step=0.1
            placeholder=0.0
            value={{@measure.muscle}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block text-gray-800 mb-1 pr-2" for="inline-bone-density">
      <span>{{svg-jar "bone_density-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full appearance-none py-2 px-4 border border-gray-500
                  text-gray-700 leading-tight focus:outline-none focus:border-yellow-500"
            id="inline-bone-density"
            type="number"
            step=0.1
            placeholder=0.0
            value={{@measure.boneDensity}}>
  </div>
  <div class="flex mt-6">
    <button class="w-full shadow py-2 px-4 bg-yellow-800 font-semibold text-white mr-2
                  hover:bg-yellow-700 focus:shadow-outline focus:outline-none"
            type="button"
            {{on "click" @onClose}}>
    Cancel
    </button>
    <button class="w-full shadow py-2 px-4 bg-yellow-500 font-semibold text-white
                  hover:bg-yellow-400 focus:shadow-outline focus:outline-none"
            type="button"
            {{on "click" this.onSave}}>
    Save
    </button>
  </div>
</form>