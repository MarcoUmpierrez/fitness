<form class="w-full px-2">
  <div class="my-2 text-lg font-semibold text-center">
    <span>{{format-date @date}}</span>
  </div>
  <div class="flex items-center mb-2">
    <label class="block pr-2 mb-1 text-gray-800" for="inline-weight">
      <span>{{svg-jar "weight-scale-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full px-4 py-2 leading-tight text-gray-700 border border-gray-500 appearance-none focus:outline-none focus:border-yellow-500"
            id="inline-weight"
            type="number"
            step={{0.1}}
            pattern="[0-9]+([\.,][0-9]+)?"
            placeholder={{0.0}}
            value={{this.measures.weight}}
            {{on "input" this.onInput}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block pr-2 mb-1 text-gray-800" for="inline-fat">
      <span>{{svg-jar "fat-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full px-4 py-2 leading-tight text-gray-700 border border-gray-500 appearance-none focus:outline-none focus:border-yellow-500"
            id="inline-fat"
            type="number"
            step={{0.1}}
            pattern="[0-9]+([\.,][0-9]+)?"
            placeholder={{0.0}}
            value={{this.measures.fat}}
            {{on "input" this.onInput}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block pr-2 mb-1 text-gray-800" for="inline-water">
      <span>{{svg-jar "water-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full px-4 py-2 leading-tight text-gray-700 border border-gray-500 appearance-none focus:outline-none focus:border-yellow-500"
            id="inline-water"
            type="number"
            step={{0.1}}
            pattern="[0-9]+([\.,][0-9]+)?"
            placeholder={{0.0}}
            value={{this.measures.water}}
            {{on "input" this.onInput}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block pr-2 mb-1 text-gray-800" for="inline-muscle">
      <span>{{svg-jar "muscle-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full px-4 py-2 leading-tight text-gray-700 border border-gray-500 appearance-none focus:outline-none focus:border-yellow-500"
            id="inline-muscle"
            type="number"
            step={{0.1}}
            pattern="[0-9]+([\.,][0-9]+)?"
            placeholder={{0.0}}
            value={{this.measures.muscle}}
            {{on "input" this.onInput}}>
  </div>

  <div class="flex items-center mb-2">
    <label class="block pr-2 mb-1 text-gray-800" for="inline-bone-density">
      <span>{{svg-jar "bone_density-24px" class="fill-current" width="36px" height="36px"}}</span>
    </label>
    <input class="w-full px-4 py-2 leading-tight text-gray-700 border border-gray-500 appearance-none focus:outline-none focus:border-yellow-500"
            id="inline-bone-density"
            type="number"
            step={{0.1}}
            pattern="[0-9]+([\.,][0-9]+)?"
            placeholder={{0.0}}
            value={{this.measures.boneDensity}}
            {{on "input" this.onInput}}>
  </div>
  <div class="flex mt-6">
    <button class="w-full px-4 py-2 mr-2 font-semibold text-white bg-yellow-800 shadow hover:bg-yellow-700 focus:shadow-outline focus:outline-none"
            {{on "click" @onClose}}>
      Cancel
    </button>
    <button class="w-full px-4 py-2 font-semibold text-white bg-yellow-500 shadow hover:bg-yellow-400 focus:shadow-outline focus:outline-none"
            {{on "click" this.save}}>
      Save
    </button>
  </div>
</form>