<td class="row-height cell-width align-top
          {{if this.isCurrentMonth "text-gray-800" "text-gray-500"}}
          {{if this.isToday "bg-yellow-400 rounded" ""}}"
          role="button"
          {{on "click" (fn @selectDay @date)}}>
  <span class="block">{{this.day}}</span>
  <div class="flex flex-col items-center justify-center">
    {{#if this.hasMeasure}}
      <span class="block rounded-full w-6 h-6 flex items-center justify-center font-semibold mt-2
                   {{if this.isToday "bg-white text-yellow-600" "bg-yellow-500 text-white"}}">
        M
      </span>
    {{/if}}
    {{#if this.hasTraining}}
      <span class="block rounded-full w-6 h-6 flex items-center justify-center font-semibold mt-2
                   {{if this.isToday "bg-white text-yellow-600" "bg-yellow-500 text-white"}}">
        T
      </span>
    {{/if}}
  </div>
</td>