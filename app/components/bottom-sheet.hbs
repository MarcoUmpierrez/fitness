<div class="h-full w-full opacity-75 bg-gray-800" {{on "click" @onClose}}></div>
<div class="p-2 bg-white bottom-sheet-content">
  {{#if this.isMenuState}}
    <h1 class="w-full border-b-2 border-yellow-500 mb-4 text-yellow-500 font-semibold">Actions</h1>
    <ul class="activity-options">         
      <li>
        <button class="w-full flex shadow py-2 px-4 mt-2 bg-yellow-500 font-semibold text-white 
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button"
                {{on "click" this.setMeasuresState}}>
          <span>{{svg-jar "square_foot-24px" class="fill-current" width="24px"}}</span>
          Measures
        </button>     
      </li>
      <li>        
        <button class="w-full flex shadow py-2 px-4 mt-2 bg-yellow-500 font-semibold text-white 
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button"
                {{on "click" this.setTrainingState}}>
          <span>{{svg-jar "directions_run-24px" class="fill-current" width="24px"}}</span>
          Training
        </button>   
      </li>
    </ul>
  {{else if this.isMeasureState}}
    <h1 class="w-full border-b-2 border-yellow-500 mb-4 text-yellow-500 font-semibold">Measures</h1>
    <form class="w-full">
      <div class="flex items-center mb-2">
        <div class="w-1/3">
          <label class="block text-gray-800 mb-1 pr-4" for="inline-weight">
            <span class="float-right">{{svg-jar "weight-scale-24px" class="fill-current" }}</span>
          </label>
        </div>
        <div class="w-2/3">
          <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                        text-gray-700 leading-tight focus:outline-none 
                        focus:border-yellow-500"
                  id="inline-weight" 
                  type="number"
                  step=0.1
                  placeholder=0.0>
        </div>
      </div>
      
      <div class="flex items-center mb-2">
        <div class="w-1/3">
          <label class="block text-gray-800 mb-1 pr-4" for="inline-fat">            
            <span class="float-right">{{svg-jar "fat-24px" class="fill-current" }}</span>
          </label>
        </div>
        <div class="w-2/3">
          <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                        text-gray-700 leading-tight focus:outline-none 
                        focus:border-yellow-500"
                  id="inline-fat" 
                  type="number"
                  step=0.1
                  placeholder=0.0>
        </div>
      </div>
      
      <div class="flex items-center mb-2">
        <div class="w-1/3">
          <label class="block text-gray-800 mb-1 pr-4" for="inline-water">   
            <span class="float-right">{{svg-jar "water-24px" class="fill-current"}}</span>
          </label>
        </div>
        <div class="w-2/3">
          <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                        text-gray-700 leading-tight focus:outline-none 
                        focus:border-yellow-500"
                  id="inline-water" 
                  type="number"
                  step=0.1
                  placeholder=0.0>
        </div>
      </div>

      
      <div class="flex items-center mb-2">
        <div class="w-1/3">
          <label class="block text-gray-800 mb-1 pr-4" for="inline-muscle">
            <span class="float-right">{{svg-jar "muscle-24px" class="fill-current" }}</span>
          </label>
        </div>
        <div class="w-2/3">
          <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                        text-gray-700 leading-tight focus:outline-none 
                        focus:border-yellow-500"
                  id="inline-muscle" 
                  type="number"
                  step=0.1
                  placeholder=0.0>
        </div>
      </div>
      
      <div class="flex items-center mb-2">
        <div class="w-1/3">
          <label class="block text-gray-800 mb-1 pr-4" for="inline-bone-density">
            <span class="float-right">{{svg-jar "bone_density-24px" class="fill-current" }}</span>
          </label>
        </div>
        <div class="w-2/3">
          <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                        text-gray-700 leading-tight focus:outline-none 
                        focus:border-yellow-500"
                  id="inline-bone-density" 
                  type="number"
                  step=0.1
                  placeholder=0.0>
        </div>
      </div>
      <div class="flex">
        <button class="w-full shadow py-2 px-4 bg-yellow-800 font-semibold text-white mr-2 
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button">
        Cancel
        </button>
        <button class="w-full shadow py-2 px-4 bg-yellow-500 font-semibold text-white
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button">
        Save
        </button>
      </div>
    </form>
  {{else if this.isTrainingState}}
    <h1 class="w-full border-b-2 border-yellow-500 mb-4 text-yellow-500 font-semibold">Training</h1>

  {{/if}}
</div>