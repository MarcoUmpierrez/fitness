<div class="h-full w-full opacity-75 bg-gray-800" {{on "click" @onClose}}></div>
<div class="p-2 bg-white bottom-sheet-content">
  {{#if this.isMenuState}}
    <h1 class="w-full border-b-2 border-yellow-500 mb-4 text-yellow-500 font-semibold">Actions</h1>
    <ul class="activity-options">         
      <li>
        <button class="w-full flex shadow py-2 px-4 mt-2 bg-yellow-500 font-semibold text-white 
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button"
                {{on "click" this.setMeasuresState}}>
          <span>{{svg-jar "square_foot-24px" class="fill-current" width="24px"}}</span>
          Measures
        </button>     
      </li>
      <li>        
        <button class="w-full flex shadow py-2 px-4 mt-2 bg-yellow-500 font-semibold text-white 
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button"
                {{on "click" this.setTrainingState}}>
          <span>{{svg-jar "directions_run-24px" class="fill-current" width="24px"}}</span>
          Training
        </button>   
      </li>
    </ul>

  {{else if this.isMeasureState}}
    <h1 class="w-full border-b-2 border-yellow-500 mb-4 text-yellow-500 font-semibold">Measures</h1>
    <form class="w-full">
      <div class="text-lg font-semibold text-center py-2">
        <span>{{format-date @event.day}}</span>
      </div>
      <div class="flex items-center mb-2">
        <label class="block text-gray-800 mb-1 pr-2" for="inline-weight">
          <span>{{svg-jar "weight-scale-24px" class="fill-current" width="36px" height="36px"}}</span>
        </label>
        <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                      text-gray-700 leading-tight focus:outline-none focus:border-yellow-500"
                id="inline-weight" 
                type="number"
                step=0.1
                placeholder=0.0>
      </div>
      
      <div class="flex items-center mb-2">
        <label class="block text-gray-800 mb-1 pr-2" for="inline-fat">            
          <span>{{svg-jar "fat-24px" class="fill-current" width="36px" height="36px"}}</span>
        </label>
        <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                      text-gray-700 leading-tight focus:outline-none focus:border-yellow-500"
                id="inline-fat" 
                type="number"
                step=0.1
                placeholder=0.0>
      </div>
      
      <div class="flex items-center mb-2">
        <label class="block text-gray-800 mb-1 pr-2" for="inline-water">   
          <span>{{svg-jar "water-24px" class="fill-current" width="36px" height="36px"}}</span>
        </label>
        <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                      text-gray-700 leading-tight focus:outline-none 
                      focus:border-yellow-500"
                id="inline-water" 
                type="number"
                step=0.1
                placeholder=0.0>
      </div>
      
      <div class="flex items-center mb-2">
        <label class="block text-gray-800 mb-1 pr-2" for="inline-muscle">
          <span>{{svg-jar "muscle-24px" class="fill-current" width="36px" height="36px"}}</span>
        </label>
        <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                      text-gray-700 leading-tight focus:outline-none 
                      focus:border-yellow-500"
                id="inline-muscle" 
                type="number"
                step=0.1
                placeholder=0.0>
      </div>
      
      <div class="flex items-center mb-2">
        <label class="block text-gray-800 mb-1 pr-2" for="inline-bone-density">
          <span>{{svg-jar "bone_density-24px" class="fill-current" width="36px" height="36px"}}</span>
        </label>
        <input class="w-full appearance-none py-2 px-4 border border-gray-500 
                      text-gray-700 leading-tight focus:outline-none focus:border-yellow-500"
                id="inline-bone-density" 
                type="number"
                step=0.1
                placeholder=0.0>
      </div>
      <div class="flex">
        <button class="w-full shadow py-2 px-4 bg-yellow-800 font-semibold text-white mr-2 
                      hover:bg-yellow-700 focus:shadow-outline focus:outline-none" 
                type="button"
                {{on "click" @onClose}}>
        Cancel
        </button>
        <button class="w-full shadow py-2 px-4 bg-yellow-500 font-semibold text-white
                      hover:bg-yellow-400 focus:shadow-outline focus:outline-none" 
                type="button"
                {{on "click" this.saveMeasures}}>
        Save
        </button>
      </div>
    </form>
  {{else if this.isTrainingState}}
    <h1 class="w-full border-b-2 border-yellow-500 mb-4 text-yellow-500 font-semibold">Training</h1>

  {{/if}}
</div>