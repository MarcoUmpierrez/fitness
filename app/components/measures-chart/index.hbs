<MeasuresChart::Menu @period={{this.period}} @selectPeriod={{this.selectPeriod}}/>
{{#if (eq this.period "week")}}
  <MeasuresChart::Selection @label={{this.week}} @previous={{this.previousWeek}} @next={{this.nextWeek}} />
{{else if (eq this.period "month")}}
  <MeasuresChart::Selection @label={{this.month}} @previous={{this.previousMonth}} @next={{this.nextMonth}} />
{{else}}
  <MeasuresChart::Selection @label={{this.year}} @previous={{this.previousYear}} @next={{this.nextYear}} />
{{/if}}
<MeasuresChart::Chart
  @title="Weight"
  @chartId="weight-chart"
  @propertyToRender="weight"
  @period={{this.period}}
  @date={{this.date}}
  @data={{@model}}
/>
