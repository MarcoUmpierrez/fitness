<div>
  <form>
    <label for="weight">Weight</label>
    <input 
      id="weight"
      type="number" 
      step="0.1" 
      value={{this.model.weight}} 
      placeholder="0.0" 
      oninput={{action (mut this.model.weight) value="target.value"}}
    >

    <label for="water">Water</label>
    <input 
      id="water"
      type="number" 
      step="0.1" 
      value={{this.model.water}} 
      placeholder="0.0" 
      oninput={{action (mut this.model.water) value="target.value"}}
    >

    <label for="fat">Fat</label>
    <input 
      id="fat"
      type="number" 
      step="0.1" 
      value={{this.model.fat}} 
      placeholder="0.0" 
      oninput={{action (mut this.model.fat) value="target.value"}}
    >

    <label for="muscle">Muscle</label>
    <input 
      id="muscle"
      type="number" 
      step="0.1" 
      value={{this.model.muscle}} 
      placeholder="0.0" 
      oninput={{action (mut this.model.muscle) value="target.value"}}
    >

    <label for="bone-density">Bone Density</label>
    <input 
      id="bone-density"
      type="number" 
      step="0.1" 
      value={{this.model.boneDensity}} 
      placeholder="0.0" 
      oninput={{action (mut this.model.boneDensity) value="target.value"}}
    >
  </form>
  <button onclick={{action this.doStuff}}>bu</button>
</div>