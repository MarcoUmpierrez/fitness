<div class="h-full">
  <header class="relative w-full py-2 z-10 border-b-2 border-yellow-400 text-center bg-white">
    <span class="font-sans font-semibold text-lg text-gray-800">{{this.month}}</span>
  </header>
  <section class="relative">
    <CalendarGrid 
      @date={{this.date}} 
      @increaseMonth={{this.incMonth}}
      @decreaseMonth={{this.decMonth}}
      @events={{this.model}}
      @selectDay={{this.selectDay}}
    />
    {{#if this.showBottomSheet}}
      <div class="flex flex-col absolute z-10 inset-0 bottom-sheet-height" >
        <BottomSheet @onClose={{this.toggleBottomSheet}} @selectedDay={{this.selectedDay}} />
      </div>
    {{/if}}
  </section>
</div>