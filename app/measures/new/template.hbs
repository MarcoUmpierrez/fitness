<div class="measures-new-container">
  <form class="band">
    <div>
      <FaIcon @icon="weight" title="weight"/>
      <input 
        id="weight"
        type="number" 
        step="0.1" 
        value={{this.model.weight}} 
        placeholder="0.0" 
        oninput={{action (mut this.model.weight) value="target.value"}}
      >
    </div>

    <div>
      <FaIcon @icon="tint" title="water"/>
      <input 
        id="water"
        type="number" 
        step="0.1" 
        value={{this.model.water}} 
        placeholder="0.0" 
        oninput={{action (mut this.model.water) value="target.value"}}
      >      
    </div>

    <div>
      <FaIcon @icon="bacon"  title="fat"/>
      <input 
        id="fat"
        type="number" 
        step="0.1" 
        value={{this.model.fat}} 
        placeholder="0.0" 
        oninput={{action (mut this.model.fat) value="target.value"}}
      >
    </div>

    <div>
      <FaIcon @icon="dumbbell" title="muscle"/>
      <input 
        id="muscle"
        type="number" 
        step="0.1" 
        value={{this.model.muscle}} 
        placeholder="0.0" 
        oninput={{action (mut this.model.muscle) value="target.value"}}
      >
    </div>

    <div>
      <FaIcon @icon="bone" title="bone density"/>
      <input 
        id="bone-density"
        type="number" 
        step="0.1" 
        value={{this.model.boneDensity}} 
        placeholder="0.0" 
        oninput={{action (mut this.model.boneDensity) value="target.value"}}
      >
    </div>
  </form>
  <div class="footer">
    <button onclick={{action this.doStuff}}><FaIcon @icon="save"/></button>
    {{#link-to "measures"}}<FaIcon @icon="times-circle"/>{{/link-to}}    
  </div>
</div>
